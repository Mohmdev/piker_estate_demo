{
  "name": "nexweb-b2b-template",
  "version": "0.3.1",
  "private": true,
  "license": "MIT",
  "type": "module",
  "author": "Mohmdev",
  "repository": {
    "type": "git",
    "url": "https://github.com/Mohmdev/nexweb-b2b"
  },
  "scripts": {
    "ii": "cross-env NODE_OPTIONS=--no-deprecation pnpm --ignore-workspace install",
    "reinstall": "cross-env NODE_OPTIONS=--no-deprecation rm -rf node_modules && rm pnpm-lock.yaml && pnpm --ignore-workspace install",
    "build": "cross-env NODE_OPTIONS=--no-deprecation next build",
    "postbuild": "next-sitemap --config next-sitemap.config.cjs",
    "start": "cross-env NODE_OPTIONS=--no-deprecation next start -p 3000",
    "start:private": "cross-env NODE_OPTIONS=--no-deprecation next start --hostname :: -p 3000",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbopack -p 3000",
    "dev:container": "cross-env NODE_OPTIONS=--no-deprecation next dev --turbopack -p 3000 -H 0.0.0.0",
    "dev:inspect": "cross-env NODE_OPTIONS='--inspect' next dev --turbopack -p 3000",
    "devsafe": "rm -rf .next && cross-env NODE_OPTIONS=--no-deprecation next dev --turbopack -p 3000",
    "lint:safe": "cross-env NODE_OPTIONS=--no-deprecation pnpm biome lint --write ./src",
    "lint:next": "cross-env NODE_OPTIONS=--no-deprecation next lint",
    "format:src": "biome format --write ./src",
    "payload": "cross-env NODE_OPTIONS=--no-deprecation payload",
    "generate:importmap": "payload generate:importmap",
    "generate:schema": "payload-graphql generate:schema",
    "generate:types": "payload generate:types",
    "migrate": "payload migrate",
    "migrate:status": "payload migrate:status",
    "migrate:down": "payload migrate:down",
    "migrate:reset": "payload migrate:reset",
    "migrate:fresh": "payload migrate:fresh",
    "migrate:create": "payload migrate:create",
    "ci": "NODE_OPTIONS=--no-deprecation pnpm --ignore-workspace install --frozen-lockfile",
    "seed:all": "payload run src/app/next/seedScript.ts",
    "update-deps": "rm node_modules pnpm-lock.yaml -rf && pnpm i"
  },
  "dependencies": {
    "@payloadcms/db-vercel-postgres": "latest",
    "@payloadcms/email-resend": "latest",
    "@payloadcms/live-preview-react": "latest",
    "@payloadcms/next": "latest",
    "@payloadcms/plugin-form-builder": "latest",
    "@payloadcms/plugin-nested-docs": "latest",
    "@payloadcms/plugin-redirects": "latest",
    "@payloadcms/plugin-search": "latest",
    "@payloadcms/plugin-seo": "latest",
    "@payloadcms/richtext-lexical": "latest",
    "@payloadcms/storage-vercel-blob": "latest",
    "@payloadcms/ui": "latest",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-slot": "^1.0.2",
    "@tailwindcss/typography": "^0.5.16",
    "@tanstack/react-query": "^5.65.1",
    "@vercel/toolbar": "^0.1.30",
    "autoprefixer": "^10.4.19",
    "babel-plugin-react-compiler": "19.0.0-beta-27714ef-20250124",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cross-env": "^7.0.3",
    "ejs": "^3.1.10",
    "geist": "^1.3.1",
    "graphql": "^16.8.2",
    "juice": "^11.0.0",
    "lucide-react": "^0.474.0",
    "next": "^15.1.5",
    "next-sitemap": "^4.2.3",
    "next-themes": "^0.4.4",
    "payload": "latest",
    "payload-admin-bar": "^1.0.6",
    "peek-readable": "5.3.1",
    "prism-react-renderer": "^2.3.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-hook-form": "7.45.4",
    "sharp": "0.32.6",
    "swiper": "^11.2.1",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@types/ejs": "^3.1.5",
    "@types/escape-html": "^1.0.2",
    "@types/node": "22.5.4",
    "@types/react": "19.0.7",
    "@types/react-dom": "19.0.3",
    "copyfiles": "^2.4.1",
    "globals": "^15.14.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5.7.3"
  },
  "engines": {
    "node": ">=18.20.2 <23.0.0"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "sharp"
    ]
  }
}
